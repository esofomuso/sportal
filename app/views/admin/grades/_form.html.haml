= form_for(grade) do |f|
  - if grade.errors.any?
    #error_explanation
      %h2
        = pluralize(grade.errors.count, "error")
        prohibited this grade from being saved:
      %ul
        - grade.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit
