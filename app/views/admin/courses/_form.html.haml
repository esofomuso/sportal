- if course.errors.any?
  #error_explanation
    %h2
      = pluralize(course.errors.count, "error")
      prohibited this course from being saved:
    %ul
      - course.errors.full_messages.each do |msg|
        %li= msg
.field
  = f.label :name
  %br/
  = f.text_field :name
.field
  = f.label :code
  %br/
  = f.text_field :code
.field
  = f.label :description
  %br/
  = f.text_area :description
.field
  = f.label :Department
  %br/
  = f.select :department_id, departments.collect {|x| [x.name, x.id]},{}, :multiple => false
.field
  = f.label :Grade
  %br/
  = f.select :grade_id, grades.collect {|x| [x.name, x.id]},{}, :multiple => false
.actions
  = f.submit